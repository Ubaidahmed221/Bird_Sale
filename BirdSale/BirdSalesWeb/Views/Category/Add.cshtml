<div class="card-header pb-0 text-left">
    <h3 class="font-weight-bolder text-primary text-gradient">Insert today</h3>
</div>
<div class="card-body pb-3">
    <form id="categoryForm" role="form">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <label>Name</label>
                    <div class="mb-3">
                        <input id="categoryName" type="text" class="form-control" placeholder="Category Name" aria-label="Name">
                    </div>
                </div>
                <div class="col-md-12">
                    <label>Description</label>
                    <div class="mb-3">
                        <textarea id="categoryDescription" class="form-control" placeholder="Description"></textarea>
                    </div>
                </div>
                <div class="col-md-12">
                    <button type="submit" id="submitCategory" class="btn btn-primary">Add Category</button>
                </div>
            </div>
        </div>
    </form>
</div>

